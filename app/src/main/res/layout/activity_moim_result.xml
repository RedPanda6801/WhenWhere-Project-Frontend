<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".moimResult">

    <ImageView
        android:id="@+id/arrowleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/arrowleft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginStart="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <TextView
        android:id="@+id/moim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="데이트 모임"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="의 약속 정보"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginStart="42dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/when_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When : "
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toBottomOf="@+id/title"
            />

        <TextView
            android:id="@+id/when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-05-22"
            android:fontFamily="@font/pretendard_regular"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        app:layout_constraintTop_toBottomOf="@+id/title2"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/where_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where : "
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toBottomOf="@+id/title"
            />

        <TextView
            android:id="@+id/where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인천광역시 연수구 경원대로 480"
            android:fontFamily="@font/pretendard_regular"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        app:layout_constraintTop_toBottomOf="@+id/title3"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코스"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toBottomOf="@+id/title"
            />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/place1"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@drawable/courseview"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurantname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="22dp"
                android:fontFamily="@font/pretendard_bold"
                android:lineHeight="19sp"
                android:text="장소1"
                android:textColor="@color/main"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/restaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="중간 장소로부터 거리"
                android:textColor="#565656"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/restphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="상세 주소"
                android:layout_marginTop="3dp"
                android:textColor="#565656"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/resthash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="22dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="해시태그"
                android:textColor="@color/main"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/place2"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@drawable/courseview"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="35dp"

        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cafeplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard_bold"
                android:lineHeight="19sp"
                android:text="장소1"
                android:textColor="@color/main"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cafeaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="중간 장소로부터 거리"
                android:textColor="#565656"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cafephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="상세 주소"
                android:textColor="#565656"
                android:layout_marginTop="3dp"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/cafehash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/main"
                android:text="해시태그"
                android:textSize="12sp"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/place3"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="35dp"

        android:layout_height="97dp"
        android:background="@drawable/courseview"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drinkname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard_bold"
                android:lineHeight="19sp"
                android:text="장소1"
                android:textColor="@color/main"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/drinkaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="중간 장소로부터 거리"
                android:textColor="#565656"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/drinkphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="상세 주소"
                android:textColor="#565656"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/drinkhash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="해시태그"
                android:textColor="@color/main"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>