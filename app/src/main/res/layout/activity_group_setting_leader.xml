<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GroupSetting_leader">

    <ImageView
        android:id="@+id/arrowleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/arrowleft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="@+id/arrowleft"
        app:layout_constraintStart_toEndOf="@+id/arrowleft"/>

    <RelativeLayout
        android:id="@+id/exitGroup"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/edge"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <Button
            android:id="@+id/exitGroupBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?attr/selectableItemBackground"            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="모임 나가기"
            android:textColor="#000000"
            android:textSize="17sp"/>
    </RelativeLayout>

"


    <RelativeLayout
        android:id="@+id/addMember"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingGroup">

        <Button
            android:id="@+id/addMemberBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="멤버 초대하기"
            android:textColor="#000000"
            android:textSize="17sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/resign"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/edge"
        android:layout_marginTop="-2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMember">

        <Button
            android:id="@+id/resingBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/pretendard_medium"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="멤버 내보내기"
            android:textColor="#000000"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/edge"
        android:layout_marginTop="-2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resign">

        <Button
            android:id="@+id/acceptBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/pretendard_medium"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="가입 신청 수락하기"
            android:textColor="#000000"
            android:textSize="17sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/settingGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 관리"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="17dp"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exitGroup" />



    <RelativeLayout
        android:id="@+id/removeGroup"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/edge"
        android:layout_marginTop="-2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accept">

        <Button
            android:id="@+id/removeGroupBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/pretendard_medium"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="모임 삭제하기"
            android:textColor="#000000"
            android:textSize="17sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>